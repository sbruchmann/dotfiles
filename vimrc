syntax on
colorscheme desert
set background=dark

filetype indent on
filetype plugin on

set autoindent
set autoread
set expandtab
set encoding=utf-8
set hlsearch
set ignorecase
set nocompatible
set incsearch
set nobackup
set noswapfile
set nowb
set number
set ruler
set showcmd
set showmatch
set showmode
set smartcase
set ruler

imap <TAB> <C-N>

set smarttab
set shiftwidth=2
set tabstop=2
set wrap
